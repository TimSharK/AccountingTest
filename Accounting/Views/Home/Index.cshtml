@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
<div id="example">
            <div id="grid"></div>

    <script>
        $(document).ready(function () {
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: '@Url.Action("Report")',
                        dataType: "json"
                    },
                    update: {
                        url: '@Url.Action("ReportUpdate")',
                        dataType: "json"
                    },
                    parameterMap: function (data, type) {
                        return kendo.stringify(data);
                    }
                },
                batch: true,
                pageSize: 20,
                schema: {
                    model: {
                        id: "Id"
                    }
                }
            });

            $("#grid").kendoGrid({
                dataSource: dataSource,
                dataBound: function(e) {
                    this.hideColumn(0);
                },
                toolbar: ["save", "cancel"],
                height: 550,
                scrollable: true,
                sortable: true,
                editable: true,
                filterable: true,
                pageable: {
                    input: true,
                    numeric: false
                }
            });
        });

    </script>
    

</div>

